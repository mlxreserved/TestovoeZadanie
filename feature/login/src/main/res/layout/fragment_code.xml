<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codeFragment"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1">
        <TextView
            android:textColor="@color/white"
            android:id="@+id/sent_message"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/sfpro_semibold"
            android:layout_height="wrap_content"
            android:text="@string/sent_message"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/sfpro_medium"
            android:text="@string/write_him" />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
                <EditText
                    android:id="@+id/codeField1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/code_hint"
                    android:fontFamily="@font/sfpro_medium"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:layout_marginEnd="8dp"
                    android:nextFocusRight="@id/codeField2"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey3" />

                <EditText
                    android:id="@+id/codeField2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:fontFamily="@font/sfpro_medium"
                    android:background="@drawable/custom_input"
                    android:hint="@string/code_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:layout_marginEnd="8dp"
                    android:nextFocusRight="@id/codeField2"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey3" />

                <EditText
                    android:id="@+id/codeField3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/code_hint"
                    android:fontFamily="@font/sfpro_medium"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:layout_marginEnd="8dp"
                    android:nextFocusRight="@id/codeField2"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey3" />

                <EditText
                    android:id="@+id/codeField4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/code_hint"
                    android:fontFamily="@font/sfpro_medium"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:layout_marginEnd="8dp"
                    android:nextFocusRight="@id/codeField2"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey3" />
            </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_blue_button"
            android:text="@string/btn_apply"
            android:textColor="@color/custom_text_button"
            android:textSize="16sp"
            app:backgroundTint="@null"
            android:fontFamily="@font/sfpro_semibold"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="252dp" />
</LinearLayout>