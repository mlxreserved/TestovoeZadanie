            </LinearLayout>
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/grey1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/sfpro_medium"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/verify"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/map"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_regular"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginHorizontal="16dp"

                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/sfpro_regular"
                android:layout_marginVertical="16dp"/>
            <TextView
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_tasks"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpro_semibold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tasks"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:visibility="gone"
                android:fontFamily="@font/sfpro_regular"
                android:layout_marginBottom="32dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpro_medium"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/he_will_get"
                android:fontFamily="@font/sfpro_medium"
                android:textColor="@color/grey3"
                android:layout_marginBottom="16dp"/>
            <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    app:background="@drawable/custom_green_button"
                    app:backgroundTint="@color/grey2"
                    android:text="Где распологается место работы?"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_medium"
                    android:textColor="@color/white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    android:textAlignment="center">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:background="@drawable/custom_green_button"
                    app:backgroundTint="@color/grey2"
                    android:text="Где распологается место работы?"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_medium"
                    android:textColor="@color/white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="8dp"
                    android:visibility="gone"
                    android:paddingHorizontal="12dp"
                    android:textAlignment="center">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:background="@drawable/custom_green_button"
                    app:backgroundTint="@color/grey2"
                    android:text="Где распологается место работы?"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_medium"
                    android:textColor="@color/white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    android:textAlignment="center">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:background="@drawable/custom_green_button"
                    app:backgroundTint="@color/grey2"
                    android:text="Где распологается место работы?"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_medium"
                    android:textColor="@color/white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    android:textAlignment="center"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:background="@drawable/custom_green_button"
                    app:backgroundTint="@color/grey2"
                    android:text="Какой график работы?"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_medium"
                    android:textColor="@color/white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    android:textAlignment="center"/>

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/apply_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/custom_blue_button"
                android:layout_marginHorizontal="15dp"
                android:text="@string/response"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/green"
                android:fontFamily="@font/sfpro_semibold"
                android:layout_marginVertical="16dp"/>

            </LinearLayout>
    </ScrollView>
</LinearLayout>